<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="js/script.js"></script>
</head>

<body>
    <section id="line-01">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="img/logo.png" width="160px" height="100px">
                </div>
                <div class="col-10">
                </div>
            </div>
        </div>
    </section>
    <section id="line-02">
        <div style="width: 1300px; display: flex;">
            <%- include('side-menu.ejs') %>
            <div class="container c2">
                <p class="fs-1 text-center">Lista de Clientes</p>
                <div class="container text-center" style="margin-bottom: 50px;">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#modalWindow"><i class="bi bi-person-plus-fill"></i> NOVO CLIENTE</button></li>
                </div>

                <%- include('client-list.ejs') %>

                <div id="modalWindow" class="modal fade" style="margin-top: 20px;">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h3 class="modal-title">NOVO CLIENTE</h3>
                                <button type="button" class="btnm btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <form method="post" action="/client">
                                    <div class="row" style="margin-bottom: 20px;">
                                        <div class="col">
                                            <label for="modalName" class="form-label">Nome</label>
                                            <input type="text" class="form-control" id="modalName" name="name" required>
                                        </div>
                                        <div class="col">
                                            <label for="modalLastName" class="form-label">Sobrenome</label>
                                            <input type="text" class="form-control" id="modalLastName" name="surname" required>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 20px;">
                                        <div class="col">
                                            <label for="modalCPF" class="form-label">CPF / CNPJ</label>
                                            <input type="text" class="form-control" id="modalCPF" name="identification_number" required>
                                        </div>
                                        <div class="col">
                                            <label for="modalRef" class="form-label">Referência</label>
                                            <input type="tel" class="form-control" id="modalRef"
                                                placeholder="Empresa / Firma / Autonomo" name="reference" required>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 50px;">
                                        <div class="col">
                                            <label for="modalTel" class="form-label">Telefone</label>
                                            <input type="tel" class="form-control" id="modalTel"
                                                placeholder="(00) 0 0000-0000" name="phone" required>
                                        </div>
                                        <div class="col">
                                            <label for="modalEmail" class="form-label">E-mail</label>
                                            <input type="email" class="form-control" id="modalEmail" name="email" required>
                                        </div>
                                    </div>

                                    <div class="row" style="margin-bottom: 20px;">
                                        <div class="col">
                                            <label for="modalCEP" class="form-label">CEP</label>
                                            <input type="text" class="form-control" id="modalCEP"
                                                placeholder="00000-000" pattern="[0-9]{8}" name="cep" required>
                                        </div>
                                        <div class="col">
                                            <label for="modalCity" class="form-label">Cidade</label>
                                            <input type="text" class="form-control" id="modalCity" name="city" required>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom: 50px;">
                                        <div class="col">
                                            <label for="modalAdress" class="form-label">Endereço</label>
                                            <input type="tel" class="form-control" id="modalAdress"
                                                placeholder="R. Das angustias, Bairro" name="address" required>
                                        </div>
                                        <div class="col-3">
                                            <label for="modalAdressNumber" class="form-label">Número</label>
                                            <input type="tel" class="form-control" id="modalAdressNumber" name="building_number" required>
                                        </div>
                                    </div>

                                    <div class="container text-center">
                                        <button type="submit" class="btn btn-primary">CADASTRAR CLIENTE</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>