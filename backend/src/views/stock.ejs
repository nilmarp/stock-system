<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="js/script.js"></script>
</head>

<body>
    <section id="line-01">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="img/logo.png" width="160px" height="100px">
                </div>
                <div class="col-10">
                </div>
            </div>
        </div>
    </section>
    <section id="line-02">
        <div style="width: 1300px; display: flex;">
            <%- include('side-menu.ejs') %>
            <div class="container c2">
                <p class="fs-1 text-center">Produtos em Estoque</p>
                <div class="container text-center" style="margin-bottom: 50px;">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalStock"><i
                            class="bi bi-folder-plus"></i> NOVO PRODUTO</button></li>
                </div>

                <%- include('product-list.ejs') %>
                
                <div id="modalStock" class="modal fade" style="margin-top: 20px;">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <h3 class="modal-title">NOVO PRODUTO</h3>
                                <button type="button" class="btnm btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <form method="post" action="/stock">
                                    <div class="row" style="margin-bottom: 20px;">
                                        <div class="col-6">
                                            <label for="modalName" class="form-label">Nome</label>
                                            <input type="text" class="form-control" name="description" id="modalName" required>
                                        </div>
                                        <div class="col-3">
                                            <label for="modalName" class="form-label">Quantidade</label>
                                            <input type="number" class="form-control" name="quantity_owned" id="modalName" required>
                                        </div>
                                        <div class="col-3">
                                            <label for="modalName" class="form-label">Di√°ria</label>
                                            <input type="text" class="form-control" name="daily_price" id="modalName" required>
                                        </div>
                                    </div>

                                    <div class="container text-center" style="margin-top: 50px;">
                                        <button type="submit" class="btn btn-primary">CADASTRAR PRODUTO</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>